{
  "compilerOptions": {
    "types": ["bun-types", "@cloudflare/workers-types"],

    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "ESNext",

    "moduleResolution": "Bundler",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "moduleDetection": "force",

    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",

    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  }
}
